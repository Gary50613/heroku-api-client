{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "removeComments": false,
    "alwaysStrict": true,
    "pretty": true,
    "target": "esnext",
    "lib": ["ESNext"],
    "sourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist", "test"],
  "include": [
    "./src/**/*"
  ]
}